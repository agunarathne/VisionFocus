<resources>
    <!-- Dark theme enforced as default (AC requirement: "Dark theme default (#121212 background)") -->
    <style name="Theme.VisionFocus" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface colors (dark theme default) -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Typography -->
        <item name="textAppearanceBody1">@style/TextAppearance.VisionFocus.Body1</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
    </style>
    
    <!-- High-contrast theme variant (7:1 ratio) - will be activated in Story 5.3 Settings Screen -->
    <style name="Theme.VisionFocus.HighContrast" parent="Theme.VisionFocus">
        <!-- Pure black background, pure white foreground for 7:1+ contrast -->
        <item name="android:colorBackground">@color/high_contrast_background</item>
        <item name="colorSurface">@color/high_contrast_background</item>
        <item name="colorOnSurface">@color/high_contrast_on_surface</item>
        <item name="colorOnBackground">@color/high_contrast_on_surface</item>
        
        <!-- Story 2.3 Task 6: FAB colors for high-contrast mode (21:1 ratio) -->
        <item name="colorPrimary">@color/fab_primary_high_contrast</item>
        <item name="colorOnPrimary">@color/fab_on_primary_high_contrast</item>
        
        <!-- HIGH-7 fix: Ripple effect and switch colors for sufficient contrast -->
        <item name="colorControlHighlight">#FFFFFF</item> <!-- 100% white ripple for visibility -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item> <!-- White switch thumb -->
        <item name="android:colorControlActivated">#FFFFFF</item> <!-- White when active -->
        
        <!-- CRITICAL FIX: Text colors for labels, buttons, and UI elements -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- White text for labels -->
        <item name="android:textColorSecondary">#FFFFFF</item> <!-- White text for secondary labels -->
        <item name="colorControlNormal">#FFFFFF</item> <!-- White for unchecked switches -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text for all text views -->
        <item name="android:buttonTint">#FFFFFF</item> <!-- White button text -->
        <item name="materialButtonStyle">@style/Widget.VisionFocus.Button.HighContrast</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.VisionFocus.Button.OutlinedButton.HighContrast</item>
    </style>
    
    <!-- Large text theme variant (150% scaling) - Story 2.5 -->
    <style name="Theme.VisionFocus.LargeText" parent="Theme.VisionFocus">
        <item name="textAppearanceBody1">@style/TextAppearance.VisionFocus.Body1.Large</item>
    </style>
    
    <!-- Combined high-contrast and large text theme - Story 2.5 -->
    <style name="Theme.VisionFocus.HighContrast.LargeText" parent="Theme.VisionFocus.HighContrast">
        <item name="textAppearanceBody1">@style/TextAppearance.VisionFocus.Body1.Large</item>
    </style>
    
    <style name="TextAppearance.VisionFocus.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">20sp</item>  <!-- Increased from default 16sp -->
        <item name="android:fontFamily">sans-serif</item>  <!-- Roboto (system default on Android) -->
        <!-- lineHeight moved to values-v28/themes.xml for API 28+ -->
    </style>
    
    <!-- Large text mode variant (150% scaling) -->
    <style name="TextAppearance.VisionFocus.Body1.Large" parent="TextAppearance.VisionFocus.Body1">
        <item name="android:textSize">30sp</item>  <!-- 20sp * 1.5 -->
        <!-- lineHeight moved to values-v28/themes.xml for API 28+ -->
    </style>
    
    <!-- Button styles for high contrast mode with white text -->
    <style name="Widget.VisionFocus.Button.HighContrast" parent="Widget.Material3.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="backgroundTint">#000000</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Outlined button style for high contrast mode -->
    <style name="Widget.VisionFocus.Button.OutlinedButton.HighContrast" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">#4DFFFFFF</item> <!-- 30% white ripple -->
    </style>
</resources>
