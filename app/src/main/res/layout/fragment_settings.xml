<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Settings Title -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:paddingBottom="@dimen/spacing_large"
            android:importantForAccessibility="yes" />

        <!-- Speech Rate Section (Story 5.1) -->
        <TextView
            android:id="@+id/speechRateSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/speech_rate_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_small"
            android:accessibilityHeading="true"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/speechRateExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/speech_rate_explanation"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <!-- Current Speech Rate Display -->
        <TextView
            android:id="@+id/currentRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_speech_rate"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <!-- Speech Rate SeekBar (0.5x - 2.0x) -->
        <SeekBar
            android:id="@+id/speechRateSeekBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:max="15"
            android:progress="5"
            android:contentDescription="@string/speech_rate_slider_description"
            android:paddingBottom="@dimen/spacing_small" />

        <!-- Range Labels Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_small">

            <TextView
                android:id="@+id/minRateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/min_speech_rate"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/maxRateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/max_speech_rate"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="end"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- Test Speed Button -->
        <Button
            android:id="@+id/testSpeedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/test_speed_button"
            android:contentDescription="@string/test_speed_button_description"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Voice Selection Section (Story 5.2) -->
        <TextView
            android:id="@+id/voiceSelectionSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_selection_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_small"
            android:accessibilityHeading="true"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/voiceSelectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_selection_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/voiceSelectionExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_selection_explanation"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <!-- Voice RadioGroup (Dynamically Populated) -->
        <RadioGroup
            android:id="@+id/voiceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="@string/voice_radio_group_description">
            
            <!-- RadioButtons will be added programmatically based on available voices -->
            
        </RadioGroup>

        <!-- Empty State Message (if no voices available) -->
        <TextView
            android:id="@+id/noVoicesMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_voices_available"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            android:paddingBottom="@dimen/spacing_large"
            android:importantForAccessibility="yes" />

        <!-- Theme Settings Section -->
        <TextView
            android:id="@+id/themeSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme_settings_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="yes" />

        <!-- High Contrast Mode Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/highContrastSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target_size"
                android:text="@string/high_contrast_mode_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:contentDescription="@string/high_contrast_mode_description_off" />

            <TextView
                android:id="@+id/highContrastDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/high_contrast_mode_explanation"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- Large Text Mode Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/largeTextSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target_size"
                android:text="@string/large_text_mode_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:contentDescription="@string/large_text_mode_description_off" />

            <TextView
                android:id="@+id/largeTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text_mode_explanation"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:importantForAccessibility="no" />
        </LinearLayout>
        
        <!-- Camera Preview Switch (Testing/Development) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cameraPreviewSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target_size"
                android:text="@string/camera_preview_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:contentDescription="@string/camera_preview_description_off" />

            <TextView
                android:id="@+id/cameraPreviewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/camera_preview_explanation"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- Haptic Feedback Section (Story 2.6) -->
        <TextView
            android:id="@+id/hapticFeedbackSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_feedback_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/hapticIntensityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_intensity_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:paddingBottom="@dimen/spacing_small"
            android:accessibilityHeading="true"
            android:contentDescription="@string/haptic_intensity_section_description"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/hapticIntensityExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_intensity_explanation"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <RadioGroup
            android:id="@+id/hapticIntensityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="@string/haptic_intensity_radio_group_description">

            <RadioButton
                android:id="@+id/hapticOff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_off"
                android:contentDescription="@string/haptic_off_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticLight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_light"
                android:contentDescription="@string/haptic_light_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticMedium"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_medium"
                android:contentDescription="@string/haptic_medium_description"
                android:minHeight="48dp"
                android:checked="true"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticStrong"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_strong"
                android:contentDescription="@string/haptic_strong_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />
        </RadioGroup>

        <!-- Verbosity Mode Section (Story 4.1) -->
        <TextView
            android:id="@+id/verbosityModeSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verbosity_mode_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_small"
            android:accessibilityHeading="true"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/verbosityModeExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verbosity_mode_explanation"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <RadioGroup
            android:id="@+id/verbosityModeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="@string/verbosity_radio_group_description">

            <RadioButton
                android:id="@+id/verbosityBriefRadio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/verbosity_brief"
                android:contentDescription="@string/verbosity_brief_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/verbosityStandardRadio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/verbosity_standard"
                android:contentDescription="@string/verbosity_standard_description"
                android:minHeight="48dp"
                android:checked="true"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/verbosityDetailedRadio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/verbosity_detailed"
                android:contentDescription="@string/verbosity_detailed_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />
        </RadioGroup>
        
        <!-- Story 5.3: Reset to Defaults Button -->
        <Button
            android:id="@+id/resetDefaultsButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/reset_defaults_button"
            android:contentDescription="@string/reset_defaults_button_description"
            android:layout_marginTop="@dimen/spacing_large" />

    </LinearLayout>

</ScrollView>
