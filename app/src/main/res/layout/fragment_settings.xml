<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Settings Title -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:paddingBottom="@dimen/spacing_large"
            android:importantForAccessibility="yes" />

        <!-- Theme Settings Section -->
        <TextView
            android:id="@+id/themeSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme_settings_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="yes" />

        <!-- High Contrast Mode Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/highContrastSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target_size"
                android:text="@string/high_contrast_mode_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:contentDescription="@string/high_contrast_mode_description_off" />

            <TextView
                android:id="@+id/highContrastDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/high_contrast_mode_explanation"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- Large Text Mode Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/largeTextSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target_size"
                android:text="@string/large_text_mode_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:contentDescription="@string/large_text_mode_description_off" />

            <TextView
                android:id="@+id/largeTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text_mode_explanation"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- Haptic Feedback Section (Story 2.6) -->
        <TextView
            android:id="@+id/hapticFeedbackSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_feedback_section"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/hapticIntensityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_intensity_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:paddingBottom="@dimen/spacing_small"
            android:accessibilityHeading="true"
            android:contentDescription="@string/haptic_intensity_section_description"
            android:importantForAccessibility="yes" />

        <TextView
            android:id="@+id/hapticIntensityExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_intensity_explanation"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingBottom="@dimen/spacing_small"
            android:importantForAccessibility="no" />

        <RadioGroup
            android:id="@+id/hapticIntensityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="@string/haptic_intensity_radio_group_description">

            <RadioButton
                android:id="@+id/hapticOff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_off"
                android:contentDescription="@string/haptic_off_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticLight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_light"
                android:contentDescription="@string/haptic_light_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticMedium"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_medium"
                android:contentDescription="@string/haptic_medium_description"
                android:minHeight="48dp"
                android:checked="true"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />

            <RadioButton
                android:id="@+id/hapticStrong"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/haptic_intensity_strong"
                android:contentDescription="@string/haptic_strong_description"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>
