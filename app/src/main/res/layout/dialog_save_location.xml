<?xml version="1.0" encoding="utf-8"?>
<!--
    Save Location Dialog Layout
    Story 7.1: Save Current Location with Custom Labels
    
    Provides accessible dialog for saving current GPS location with custom name.
    Full TalkBack support with proper focus order and content descriptions.
    High-contrast mode compatible (7:1 contrast ratio).
    All touch targets minimum 48Ã—48 dp.
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_location_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textSize="20sp"
            android:textStyle="bold"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/save_location_title"
            android:accessibilityTraversalBefore="@id/nameInputLayout"/>

        <!-- Loading Indicator (shown while fetching GPS location) -->
        <LinearLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:importantForAccessibility="no"/>

            <TextView
                android:id="@+id/loadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/getting_location"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14sp"
                android:importantForAccessibility="yes"/>
        </LinearLayout>

        <!-- Name Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/location_name_hint"
            app:helperText="@string/location_name_helper"
            app:helperTextEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:errorEnabled="true"
            android:accessibilityTraversalAfter="@id/titleTextView"
            android:accessibilityTraversalBefore="@id/voiceInputButton">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:inputType="textCapWords"
                android:maxLength="100"
                android:contentDescription="@string/location_name_content_description"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:imeOptions="actionDone"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Voice Input Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/voiceInputButton"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:contentDescription="@string/voice_input_description"
            android:focusable="true"
            android:importantForAccessibility="yes"
            app:icon="@drawable/ic_mic"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            android:accessibilityTraversalAfter="@id/nameInputLayout"
            android:accessibilityTraversalBefore="@id/saveButton"/>

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:minWidth="88dp"
                android:minHeight="56dp"
                android:text="@string/cancel"
                android:textSize="14sp"
                android:contentDescription="@string/cancel_save_location_description"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:accessibilityTraversalAfter="@id/saveButton"/>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:minWidth="88dp"
                android:minHeight="56dp"
                android:text="@string/save"
                android:textSize="14sp"
                android:contentDescription="@string/save_location_button_description"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:enabled="false"
                android:accessibilityTraversalAfter="@id/voiceInputButton"
                android:accessibilityTraversalBefore="@id/cancelButton"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
