<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".navigation.ui.DestinationInputFragment">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/destination_input_title"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textColor="?attr/colorOnSurface"
        android:contentDescription="@string/destination_input_title"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Story 6.6: Network Status Indicator -->
    <include
        android:id="@+id/networkStatusComponent"
        layout="@layout/component_network_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Destination Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/destinationInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:hint="@string/destination_input_hint"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_mic"
        app:endIconContentDescription="@string/voice_input_button"
        app:layout_constraintTop_toBottomOf="@id/networkStatusComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/destinationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionGo"
            android:maxLines="2"
            android:textSize="18sp"
            android:contentDescription="@string/destination_input_field_description"
            android:importantForAccessibility="yes" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Story 7.3: Saved Locations Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/savedLocationsButton"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:minWidth="56dp"
        android:minHeight="56dp"
        android:text="@string/saved_locations_button_text"
        app:icon="@drawable/ic_bookmark"
        app:iconGravity="start"
        android:contentDescription="@string/saved_locations_button_description"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toBottomOf="@id/destinationInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Progress Indicator (hidden by default) -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/validationProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/savedLocationsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:visibility="visible" />
    
    <!-- Story 6.2: Route downloading progress indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/routeProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        android:contentDescription="@string/downloading_directions"
        app:layout_constraintTop_toBottomOf="@id/validationProgressIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:visibility="gone" />

    <!-- Story 6.5: Permission Denied Message -->
    <TextView
        android:id="@+id/permissionDeniedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/permission_denied_message"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorError"
        android:textSize="16sp"
        android:gravity="center"
        android:contentDescription="@string/permission_denied_message"
        android:importantForAccessibility="yes"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/routeProgressIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:visibility="visible" />

    <!-- Story 6.5: Open Settings Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/openSettingsButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:minWidth="140dp"
        android:minHeight="56dp"
        android:text="@string/open_settings"
        android:textSize="16sp"
        android:contentDescription="@string/open_settings_description"
        android:importantForAccessibility="yes"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/permissionDeniedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:visibility="visible" />

    <!-- Go Button -->
    <!-- CODE REVIEW FIX: Increased button size to properly display "GO" text -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/goButton"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:text="@string/go_button_text"
        android:textSize="18sp"
        android:contentDescription="@string/go_button_description"
        android:importantForAccessibility="yes"
        android:enabled="false"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
