<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera permission for object recognition (FR53, Story 1.5) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Vibrate permission for haptic feedback (Story 2.3, 2.6, 5.4) -->
    <!-- Required for: Recognition events, button presses, navigation alerts (Epic 6) -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Microphone permission for voice commands (FR55, Story 3.1) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Location permissions for GPS navigation (FR56, Story 6.2, Story 6.5) -->
    <!-- ACCESS_FINE_LOCATION only - required for GPS accuracy in turn-by-turn navigation -->
    <!-- ACCESS_BACKGROUND_LOCATION NOT used - navigation is foreground-only (Story 6.5 AC #8) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <!-- Bluetooth permissions for beacon indoor navigation (Epic 10) -->
    <!-- BLUETOOTH_SCAN: Required to discover nearby BLE beacons (Story 10.1) -->
    <!-- BLUETOOTH_CONNECT: Required to read beacon details and connect (Story 10.1) -->
    <!-- Android 12+ (API 31+) requires these permissions for BLE scanning -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    
    <!-- Legacy Bluetooth permissions for Android 11 and below -->
    <uses-permission android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />
    
    <!-- Internet permission for Google Maps Directions API (Story 6.2) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Network state permission for connectivity checks (Story 6.2) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Foreground service permission for turn-by-turn navigation (Story 6.3) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    
    <!-- Hardware feature - camera optional for graceful degradation (FR57) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    
    <!-- Future permissions -->
    <!-- ACCESS_FINE_LOCATION - Epic 6 -->
    
    <application
        android:name=".VisionFocusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.VisionFocus"
        android:supportsRtl="true">
        
        <!-- Story 6.2: Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Story 6.3: Navigation foreground service -->
        <service
            android:name=".navigation.service.NavigationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />
        
    </application>

</manifest>
