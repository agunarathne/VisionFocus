<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera permission for object recognition (FR53, Story 1.5) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Vibrate permission for haptic feedback (Story 2.3, 2.6, 5.4) -->
    <!-- Required for: Recognition events, button presses, navigation alerts (Epic 6) -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Microphone permission for voice commands (FR55, Story 3.1) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Location permissions for GPS navigation (FR56, Story 6.2) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Internet permission for Google Maps Directions API (Story 6.2) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Network state permission for connectivity checks (Story 6.2) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Hardware feature - camera optional for graceful degradation (FR57) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    
    <!-- Future permissions -->
    <!-- ACCESS_FINE_LOCATION - Epic 6 -->
    
    <application
        android:name=".VisionFocusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.VisionFocus"
        android:supportsRtl="true">
        
        <!-- Story 6.2: Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
